<%= form_tag ({:action => 'create', :method => 'post'}), :class => 'signin-panel' do %>
    <h2 class="heading">đăng nhập eds</h2>
    <div class="signin-wrap">
      <div class="gray signin-row">
        <%= text_field_tag :name, params[:name], :placeholder => 'Tên đăng nhập' %>
        <%= password_field_tag :password, params[:password], :placeholder => 'Mật khẩu' %>
      </div>
      <div class="signin-row">
        <label class="checkbox">
          <input type="checkbox" value="remember-me"> Nhớ tài khoản
                <span class="pull-right">
                    <a href="#" data-toggle="modal"> Quên mật khẩu?</a>

                </span>
        </label>

        <button type="submit" class="signin-button">ĐĂNG NHẬP</button>
      </div>
    </div>

    <div class="registration pull-right">
      Chưa có tài khoản?
      <a href="#">
        Đăng ký ngay!
      </a>
    </div>
<% end %>