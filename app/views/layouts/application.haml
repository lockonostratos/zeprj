!!!
%html
  %head
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= content_for?(:title) ? yield(:title) : "Zeprj"
    %meta{name: 'description', content: "#{content_for?(:description) ? yield(:description) : 'Zeprj'}"}
    %link{href: 'http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic&subset=latin,vietnamese'.html_safe, rel: 'stylesheet', type: 'text/css'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = yield :styles
    = javascript_include_tag 'vendor/modernizr'
    =csrf_meta_tags
  %body
    %main{id: "application", role: "main"}
      = render 'layouts/messages'
      = yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield :scripts