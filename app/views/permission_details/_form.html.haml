= form_for @permission_detail do |f|
  - if @permission_detail.errors.any?
    #error_explanation
      %h2= "#{pluralize(@permission_detail.errors.count, "error")} prohibited this permission_detail from being saved:"
      %ul
        - @permission_detail.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :permission_id
    = f.number_field :permission_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
