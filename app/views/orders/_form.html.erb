<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :branch_id %>

    <%= f.input :warehouse_id %>

    <%= f.input :merchant_account_id %>

    <%= f.input :customer_id %>

    <%= f.input :return_id %>

    <%= f.input :creation_date %>

    <%= f.input :delivery_date %>

    <%= f.input :delivery_address %>

    <%= f.input :contact_name %>

    <%= f.input :contact_phone %>

    <%= f.input :total_price %>

    <%= f.input :deposit %>

    <%= f.input :discount_cash %>

    <%= f.input :final_price %>

    <%= f.input :payment_method %>

    <%= f.input :status %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
